{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "express",
      "bcryptjs",
      "dotenv",
      "jsonwebtoken",
      "mongoose",
      "cors"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
